<div class="scroll-field">

	<div class="area content-1"></div>
	<div class="area content-2"></div>
	<div class="area content-3">
		<section class="content-text">
			<p class="text-center h1">さあ、あなたも始めてみましょう！</p>
			<p class="text-center h1">まずはログインから</p>
		</section>
		<div class="content-btn">
			<div class="pull-left">
				<span target="#modal1" class="entry-btn modal_open" >会員登録</span>
			</div>
			<div class="pull-right">
				<span target="#modal2" class="entry-btn modal_open">ログイン</span>
			</div>
		</div>
	</div>
</div>

<!---- モーダルウィンドウ ---->
<div id="modal1" class="modal-container">
	<i id="modal_close" class="fas fa-times pull-right fa-lg"></i>

	<h2 class="text-center">会員登録</h2>

	<div class="text-center">

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

		<%if flash[:message] %>
			<% flash[:message].each do |message| %>
				<p class="text-danger"><%= message %></p>
			<% end %>
		<% end %>

		<div class="field cp_iptxt">
			<%= f.text_field :name, placeholder: "名前", autofocus: true, autocomplete: "name", class: "name", :size => "" %>
			<i class="fa fa-user fa-lg fa-fw" aria-hidden="true"></i>
		</div>

		<div class="field cp_iptxt">
			<%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "email" %>
			<i class="fa fa-envelope fa-lg fa-fw" aria-hidden="true"></i>
		</div>

		<div class="field cp_iptxt">
			<% if @minimum_password_length %>
				<em>(<%= @minimum_password_length %> characters minimum)</em>
			<% end %>
			<%= f.password_field :password, placeholder: "パスワード", autocomplete: "new-password", class: "password" %>
			<i class="fas fa-unlock-alt fa-lg fa-fw" aria-hidden="true"></i>
		</div>

		<div class="field cp_iptxt">
			<%= f.password_field :password_confirmation, placeholder: "パスワード確認", autocomplete: "new-password", class: "password_confirm" %>
			<i class="fas fa-unlock-alt fa-lg fa-fw" aria-hidden="true"></i>
		</div>

		<div class="field">
			<%= f.submit "登 録", class: "btn btn-primary submit-btn" %>
		</div>
	<% end %>
	</div>

</div>
<div id="modal2">
	<i id="modal_close" class="fas fa-times pull-right fa-lg"></i>
	<div class="modal-container">

		<h2 class="text-center">ログイン</h2>

		<div class="text-center">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="field cp_iptxt">
				<!-- <%= f.label :メールアドレス, class: "text-left" %><br /> -->
				<%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "email" %>
				<i class="fa fa-envelope fa-lg fa-fw" aria-hidden="true"></i>
			</div>

			<div class="field cp_iptxt">
				<!-- <%= f.label :パスワード, class: "text-left" %><br /> -->
				<%= f.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class: "password" %>
				<i class="fas fa-unlock-alt fa-lg fa-fw" aria-hidden="true"></i>
			</div>

			<% if devise_mapping.rememberable? %>
				<div class="check-box">
					<div class="check-box-child checkbox01">
						<%= f.check_box :remember_me, class: "checkbox01-input" %>
						<%= f.label :remember_me, class: "checkbox01-parts" %>
					</div>
				</div>
			<% end %>

			<div class="field">
				<%= f.submit "ログイン", class: "btn btn-primary submit-btn" %>
			</div>

		<% end %>
		</div>
	</div>

<%= javascript_include_tag "modal_window.js" %>